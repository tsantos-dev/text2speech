{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "src": "/(.*)",
      "dest": "public/$1"
    }
  ],
  "routes": [
    {
      "src": "/synthesize",
      "methods": ["POST"],
      "dest": "/server.js"
    },
    {
      "src": "/history/(.*)",
      "methods": ["GET"],
      "dest": "/server.js"
    },
    {
      "src": "/download-texts/(.*)",
      "methods": ["GET"],
      "dest": "/server.js"
    },
    {
      "src": "/generate-mermaid-map",
      "methods": ["POST"],
      "dest": "/server.js"
    }
  ]
}
